<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

    <context:annotation-config/>
    <mvc:annotation-driven/>
    <aop:aspectj-autoproxy/>

    <bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

            <property name="locations">
                <list>
                    <value>classpath:/postgresql.properties</value>
                </list>
            </property>

            <property name="ignoreResourceNotFound" value="true"/>
            <property name="systemPropertiesModeName">
                <value>SYSTEM_PROPERTIES_MODE_OVERRIDE</value>
            </property>
        </bean>

    <context:component-scan base-package="org.openlmis.web"/>

    <import resource="classpath:/springSecurityContext.xml"/>
    <import resource="classpath:/applicationContext-authentication.xml"/>
    <import resource="classpath:/applicationContext-requisition.xml"/>
    <import resource="classpath:/applicationContext-core.xml"/>
    <import resource="classpath:/applicationContext-upload.xml"/>


    <bean id="userAuthenticationProvider" class="org.openlmis.authentication.web.UserAuthenticationProvider"/>

    <bean id="multipartResolver"
            class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>

    <mvc:resources mapping="/public/**" location="/public/"/>
    <mvc:resources mapping="/error/**" location="/public/"/>

    <mvc:interceptors>
        <bean id="noCacheInterceptor" class="org.springframework.web.servlet.mvc.WebContentInterceptor">
            <property name="cacheSeconds" value="0"/>
            <property name="useExpiresHeader" value="true"/>
            <property name="useCacheControlHeader" value="true"/>
            <property name="useCacheControlNoStore" value="true"/>
            <property name="cacheMappings">
                <props>
                    <prop key="/public/**">31556926</prop>
                </props>
            </property>
        </bean>
    </mvc:interceptors>

    <bean id="modelMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="product">
                    <value type="java.lang.Class">org.openlmis.core.domain.Product</value>
                </entry>
                <entry key="facility">
                    <value type="java.lang.Class">org.openlmis.core.domain.Facility</value>
                </entry>
                <entry key="programSupported">
                    <value type="java.lang.Class">org.openlmis.core.domain.ProgramSupported</value>
                </entry>
                <entry key="requisitionGroup">
                    <value type="java.lang.Class">org.openlmis.rnr.domain.RequisitionGroup</value>
                </entry>
                <entry key="supervisoryNode">
                    <value type="java.lang.Class">org.openlmis.rnr.domain.SupervisoryNode</value>
                </entry>
                <entry key="requisitionGroup">
                    <value type="java.lang.Class">org.openlmis.rnr.domain.RequisitionGroup</value>
                </entry>
                <entry key="requisitionGroupProgramSchedule">
                    <value type="java.lang.Class">org.openlmis.rnr.domain.RequisitionGroupProgramSchedule</value>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="persistenceHandlerMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <entry key="product" value-ref="productPersistenceHandler"/>
                <entry key="facility" value-ref="facilityPersistenceHandler"/>
                <entry key="programSupported" value-ref="programSupportedPersistenceHandler"/>
                <entry key="supervisoryNode" value-ref="supervisoryNodeHandler"/>
                <entry key="requisitionGroup" value-ref="requisitionGroupHandler"/>
                <entry key="requisitionGroupProgramSchedule" value-ref="requisitionGroupProgramScheduleHandler"/>
            </map>
        </constructor-arg>
    </bean>

</beans>