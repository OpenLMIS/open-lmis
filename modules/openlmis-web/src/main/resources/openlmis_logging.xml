  <logger name="org.springframework.mail">
    <level value="DEBUG"/>
    <appender-ref ref="logFileAppender"/>
  </logger>


  <logger name="org.openlmis">
    <level value="ERROR"/>
    <appender-ref ref="logFileAppender"/>
  </logger>

  <logger name="org.openlmis.web.interceptor">
    <level value="INFO"/>
    <appender-ref ref="syncActivityLogFileAppender"/>
  </logger>

  <logger name="org.springframework.integration">
    <level value="INFO"/>
    <appender-ref ref="logFileAppender"/>
  </logger>

  <logger name="org.openlmis.restapi">
    <level value="INFO"/>
    <appender-ref ref="logFileAppender"/>
  </logger>

  <logger name="org.springframework">
    <level value="ERROR"/>
    <appender-ref ref="logFileAppender"/>
  </logger>

<appender name="syncActivityLogFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${logHome}/sync-activity.log"/>
    <param name="MaxFileSize" value="10MB"/>
    <param name="MaxBackupIndex" value="5"/>
    <param name="Append" value="true"/>
    <param name="Encoding" value="UTF-8"/>
    <layout class="org.apache.log4j.EnhancedPatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} [%-5p][%-16.16t][%40.40c] - %m%n"/>
    </layout>
  </appender>

  <root>
    <level value="INFO"/>
    <appender-ref ref="logFileAppender"/>
  </root>
</log4j:configuration>
